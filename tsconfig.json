{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "baseUrl": "src",
    "paths": {
      "#/domains/*": ["domains/*"],
      "#/shared/*": ["shared/*"],
      "#/store": ["store"],
      "#/store/*": ["store/*"],
      "#/pages/*": ["pages/*"]
    }
  },
  "include": ["src", "typings"],
  "exclude": ["node_modules", "dist"]
}
